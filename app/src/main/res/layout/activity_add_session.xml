<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSession">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_add_session" />

    <include
        layout="@layout/content_main"
        android:layout_width="match_parent"
        android:layout_height="167dp" />

    <EditText
        android:id="@+id/editText_DateAddSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:text="Date"
        tools:layout_marginTop="55dp" />

    <EditText
        android:id="@+id/editText_TimeAddSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"
        android:text="Time"
        tools:layout_marginTop="100dp" />

    <EditText
        android:id="@+id/editText_PaidAddSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="Amount $"
        tools:layout_marginTop="150dp" />

    <View
        android:id="@+id/view_SigAddSession"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        tools:layout_marginTop="300dp" />

    <Button
        android:id="@+id/button_SubmitAddSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickReceipt"
        android:text="Submit"
        tools:layout_marginTop="515dp" />

</android.support.design.widget.CoordinatorLayout>